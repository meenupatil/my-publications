@article{ ISI:000269928800008,
Author = {Tsujino, Riyou and Sato, Hirotoshi and Imamura, Akio and Yumoto,
   Takakazu},
Title = {{Topography-specific emergence of fungal fruiting bodies in warm
   temperate evergreen broad-leaved forests on Yakushima Island, Japan}},
Journal = {{MYCOSCIENCE}},
