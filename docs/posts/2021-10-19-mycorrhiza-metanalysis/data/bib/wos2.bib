@article{ ISI:000328511700024,
Author = {Velmala, Sannakajsa M. and Rajala, Tiina and Heinonsalo, Jussi and
   Taylor, Andy F. S. and Pennanen, Taina},
Title = {{Profiling functions of ectomycorrhizal diversity and root structuring in
