@article{ ISI:000363463800020,
Author = {Sun, Hui and Santalahti, Minna and Pumpanen, Jukka and Koster, Kajar and
   Berninger, Frank and Raffaello, Tommaso and Jumpponen, Ari and Asiegbu,
