@article{ ISI:000303423400002,
Author = {Drigo, B. and Anderson, I. C. and Kannangara, G. S. K. and Cairney, J.
   W. G. and Johnson, D.},
Title = {{Rapid incorporation of carbon from ectomycorrhizal mycelial necromass
