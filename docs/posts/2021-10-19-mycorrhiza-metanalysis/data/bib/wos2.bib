@article{ ISI:000344341200001,
Author = {Tsai, Chi-Chu and Wu, Pei-Yin and Kuo, Chia-Chi and Huang, Min-Chun and
   Yu, Sheng-Kun and Hsu, Tsai-Wen and Chiang, Tzen-Yuh and Chiang,
   Yu-Chung},
Title = {{Analysis of microsatellites in the vulnerable orchid Gastrodia
