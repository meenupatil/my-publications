@article{ ISI:A1995QP99700054,
Author = {FLUCKIGER, W and BRAUN, S},
Title = {{REVITALIZATION OF AN ALPINE PROTECTIVE FOREST BY FERTILIZATION}},
Journal = {{PLANT AND SOIL}},
