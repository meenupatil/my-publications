ISSN = {{1385-1314}},
EISSN = {{1573-0867}},
ResearcherID-Numbers = {{Peoples, Mark Bernard/I-3433-2012}},
ORCID-Numbers = {{Peoples, Mark Bernard/0000-0002-3825-7907}},
Unique-ID = {{ISI:000089147300005}},
