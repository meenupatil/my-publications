ISSN = {{0378-1127}},
ResearcherID-Numbers = {{Emmett, Bridget A/D-6199-2011}},
ORCID-Numbers = {{Emmett, Bridget A/0000-0002-2713-4389}},
Unique-ID = {{ISI:A1991FW36400005}},
}

@article{ ISI:A1991FJ33100008,
