month = {may},
pages = {e4754},
pmid = {29770275},
title = {{Plant, fungal, bacterial, and nitrogen interactions in the litter layer of a native Patagonian forest}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/29770275 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5951145 https://peerj.com/articles/4754},
