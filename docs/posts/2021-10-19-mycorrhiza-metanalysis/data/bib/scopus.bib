journal = {Pedobiologia},
keywords = {Brazil,Glomeromycota,arbuscular mycorrhiza; caatinga; community structu},
publisher = {Elsevier GmbH},
title = {{Ecological restoration methods influence the structure of arbuscular mycorrhizal fungal communities in degraded drylands}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85096221714&doi=10.1016%2Fj.pedobi.2020.150690&partnerID=40&md5=256a01cb9ee1442b67177ac02f82ae95},
