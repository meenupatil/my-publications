journal = {New Phytologist},
month = {mar},
number = {4},
pages = {1705--1719},
publisher = {John Wiley & Sons, Ltd},
title = {{Ectomycorrhizal fungi decompose soil organic matter using oxidative mechanisms adapted from saprotrophic ancestors}},
