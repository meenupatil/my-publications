doi = {10.1002/jrsm.12},
issn = {17592879},
journal = {Research Synthesis Methods},
month = {apr},
number = {2},
pages = {97--111},
pmid = {26061376},
publisher = {Res Synth Methods},
title = {{A basic introduction to fixed-effect and random-effects models for meta-analysis}},
url = {https://onlinelibrary.wiley.com/doi/10.1002/jrsm.12},
volume = {1},
year = {2010}
}
