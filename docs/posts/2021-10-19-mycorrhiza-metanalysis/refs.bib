publisher = {Blackwell Publishing Ltd},
title = {{Mycorrhizal type determines the magnitude and direction of root‐induced changes in decomposition in a temperate forest}},
url = {https://onlinelibrary.wiley.com/doi/10.1111/nph.13303},
volume = {206},
year = {2015}
}
